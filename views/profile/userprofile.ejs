  <header class="container mt-4">
    <div class="row">
      <div class="col-md-3">
        <img src=<%=userdata.avatar_url%> alt="Profile Image" class="img-fluid rounded-circle">
      </div>
      <div class="col-md-6">
        <h1><%= userdata.login %></h1>
        <p><%= userdata.location %></p>
        <ul class="list-inline">
          <li class="list-inline-item"><i class="fas fa-map-marker-alt"></i> <%=  userdata.name%> </li> <br/>
          <li class="list-inline-item"><i class="fas fa-link"></i> <%= userdata.followers %> followers, <%= userdata.following %> following </li> <br/>
          <li class="list-inline-item"><i class="fas fa-calendar-alt"></i><%= userdata.created_at.substring(0,10)%></li>
        </ul>
      </div>
    </div>
  </header>
  
<!-- Main Content -->
<section class="container mt-4">
    <div class="grid-container">

      <% repo.forEach(element => { %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= element.name %></h5>
            <p class="card-text"> <%= element.language %> </p>
            <a target="_blank" href="https://github.com/<%=userdata.login%>/<%=element.name%>" class="btn btn-primary">View Repository</a>
          </div>
        </div>
        <%})%>


          
      </div>


      <div class="row justify-content-center mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination">
              <% for (let page = 1; page <= totalpage; page++) { %>
                <li class="page-item <%= page == currentpage ? 'active' : '' %>"><a class="page-link" href="?page=<%=page %>"> <%= page %> </a></li>
              <% } %>
          </ul>
        </nav>
      </div>
</section>

  
  
  
  
  
  
  